{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "https://aahar-express-f.vercel.app" },
        { "key": "Access-Control-Allow-Methods", "value": "GET, POST, PUT, DELETE, OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "X-Requested-With, Content-Type, Accept, Authorization" },
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Max-Age", "value": "86400" }
      ]
    }
  ],
  "routes": [
    { 
      "handle": "filesystem" 
    },
    {
      "src": "/api/(.*)",
      "methods": ["OPTIONS"],
      "dest": "/api/_cors.js"
    },
    {
      "src": "/api/auth/signin",
      "methods": ["POST"],
      "dest": "/api/auth/signin.js"
    },
    {
      "src": "/api/auth/signup",
      "methods": ["POST"],
      "dest": "/api/auth/signup.js"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
} 